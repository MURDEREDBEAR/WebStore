@{
    ViewData["Title"] = "The Web Store | Contact";
    ViewBag.Title = "SendEmail";
}

@if (!User.IsInRole("Admin"))
{
    <p class="display-4">Contact us</p>
}
else
{
    <p class="display-4">Send email</p>
}
<hr />

@if (ViewBag.Error != null)
{
    <h4 class="text-warning"> @ViewBag.Error </h4>
}
<div class="col-sm-6">
    <form asp-controller="Contact" asp-action="SendEmail" method="post">
        <div class="form-group">
            <span class="font-weight-bold">Sender:</span><input class="form-control" type="email" name="sender" required />
        </div>
        <div class="form-group">

            <span class="font-weight-bold">Password:</span><input class="form-control" type="password" name="password" required />
        </div>
        <div class="form-group">

            <span class="font-weight-bold">Receiver:</span><input class="form-control" type="email" name="receiver" required />
        </div>
        <div class="form-group">

            <span class="font-weight-bold">Subject:</span><input class="form-control" type="text" name="subject" />
        </div>
        <div class="form-group">

            <span class="font-weight-bold">Message:</span><textarea class="form-control" type="text" name="message" rows="4" required></textarea>
        </div>
        <div asp-validation-summary="All"></div>
        <input class="btn btn-warning" type="submit" value="Send" />
    </form>
</div>