@model WebStore.Models.Category

@{
    ViewData["Title"] = "The Web Store | Edit Category";
}

<h2 class="display-4">Edit the category</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Category" asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-dark" asp-controller="Category" asp-action="Index">Back to list</a>
                <input type="submit" value="Save" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>