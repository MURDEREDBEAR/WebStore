@model WebStore.Models.Category

@{
    ViewData["Title"] = "The Web Store | Delete Category";
}

<h2 class="display-4">Delete the category</h2>
<hr />

<div>
    <div class="col-sm-6">
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="btn-group">
    <form asp-controller="Category" asp-action="Delete" method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <a class="btn btn-outline-dark" asp-controller="Category" asp-action="Index">Back to list</a>
</div>
