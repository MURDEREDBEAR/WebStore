@model List<Microsoft.AspNetCore.Identity.IdentityRole<int>>

@{
    ViewData["Title"] = "The Web Store | Role";
}

<h2 class="display-4">Role</h2>
<hr />

@if (User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-success" asp-controller="Role" asp-action="AddRole">Add new role</a>
    </p>
}
<div class="col-sm-6">
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Role</th>
                <th colspan="2">Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @if (role.Name == "Admin")
                        {
                        }
                        else
                        {
                            <a class="btn btn-danger" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>