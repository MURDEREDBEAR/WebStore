@model List<WebStore.Models.CartItem>

@{
    ViewData["Title"] = "The Web Store | Order details";
}

<h2 class="display-4">Order details</h2>
<hr />

@if (User.IsInRole("Admin"))
{
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>SubTotal</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><span class="font-weight-bold">@item.Title</span> @item.Author</td>
                <td>@item.Price.ToString("c")</td>
                <td>@item.Quantity</td>
                <td>@((item.Price * item.Quantity).ToString("c"))</td>
            </tr>
        }
        </tbody>
    </table>
    <div class="text-left">
        <a class="btn btn-outline-dark" asp-controller="Order" asp-action="Index">Back to list</a>
    </div>

}